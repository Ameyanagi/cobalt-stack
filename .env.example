# Cobalt Stack - Docker Compose Environment Configuration
# Copy this file to .env and adjust the values as needed

# Domain Configuration
# Frontend domain for external access
FRONTEND_DOMAIN=cobalt.ameyanagi.com

# API domain for external access
API_DOMAIN=cobalt-api.ameyanagi.com

# Port Configuration
# Frontend will be accessible at http://localhost:FRONTEND_PORT
FRONTEND_PORT=2727

# Backend API will be accessible at http://localhost:BACKEND_PORT
BACKEND_PORT=2750

# PostgreSQL database port
POSTGRES_PORT=2800

# Redis cache port
REDIS_PORT=2900

# API URL Configuration
# This URL is used by the frontend to connect to the backend
# For external access: https://cobalt-api.ameyanagi.com
# For local development: http://localhost:BACKEND_PORT
NEXT_PUBLIC_API_URL=http://localhost:2750

# Frontend URL Configuration
# This URL is used by the backend for CORS configuration
# For external access: https://cobalt.ameyanagi.com
# For local development: http://localhost:FRONTEND_PORT
FRONTEND_URL=http://localhost:2727

# Database Configuration
POSTGRES_DB=cobalt_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend Configuration
# Options: trace, debug, info, warn, error
RUST_LOG=debug
