# Cobalt Stack - Docker Compose Environment Configuration
# Copy this file to .env and adjust the values as needed

# Domain Configuration
# Frontend domain for external access
FRONTEND_DOMAIN=cobalt.ameyanagi.com

# API domain for external access
API_DOMAIN=cobalt-api.ameyanagi.com

# Port Configuration
# Frontend will be accessible at http://localhost:FRONTEND_PORT
FRONTEND_PORT=2727

# Backend API will be accessible at http://localhost:BACKEND_PORT
BACKEND_PORT=2750

# PostgreSQL database port
POSTGRES_PORT=2800

# Redis cache port
REDIS_PORT=2900

# API URL Configuration
# This URL is used by the frontend to connect to the backend
# For external access: https://cobalt-api.ameyanagi.com
# For local development: http://localhost:BACKEND_PORT
NEXT_PUBLIC_API_URL=http://localhost:2750

# Frontend URL Configuration
# This URL is used by the backend for CORS configuration
# For external access: https://cobalt.ameyanagi.com
# For local development: http://localhost:FRONTEND_PORT
FRONTEND_URL=http://localhost:2727

# Database Configuration
POSTGRES_DB=cobalt_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend Configuration
# Options: trace, debug, info, warn, error
RUST_LOG=debug

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:2727,http://localhost:3001

# Email Verification
EMAIL_VERIFICATION_EXPIRY_SECONDS=86400
EMAIL_MOCK=true

# JWT Configuration
# IMPORTANT: Change JWT_SECRET in production!
JWT_SECRET=your-secret-key-change-me-in-production
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# LLM Chat Configuration
# Set to true to enable the chat feature
FEATURE_CHAT_ENABLED=false

# SambaNova API Configuration
SAMBANOVA_API_KEY=your-sambanova-api-key-here
SAMBANOVA_API_BASE=https://api.sambanova.ai/v1
SAMBANOVA_MODEL=Llama-4-Maverick-17B-128E-Instruct

# Chat Settings
CHAT_MAX_CONTEXT_MESSAGES=20
CHAT_MAX_TOKENS=2048
CHAT_MAX_MESSAGE_LENGTH=4000

# Chat Rate Limiting
CHAT_DAILY_MESSAGE_QUOTA=100
CHAT_RATE_LIMIT_PER_MINUTE=20
